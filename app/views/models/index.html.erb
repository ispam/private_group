<body style="background: #7B7688">
  <%= render partial: "elements/navbar" %>
  

  <div class="row" style="background:white !important">
    <div class="large-12 medium-12 columns">
      <p id="notice"><%= notice %></p>
        <br>
        <h2 class="text-center">Nuestras Damas</h2>
        <br>
          <div class="row large-collapse medium-collapse">
            <div class="large-12 medium-12 columns end">

                <% @models.each do |nene| %>
              <div class="large-3 medium-3 small-6 columns end" style="padding: 0 0 0 0; display: inline-block;">
                
                  <a class="lank"data-reveal-id="nene-<%= nene.id %>">
                    <% if nene.image.url %>
                      <%= image_tag nene.image.url(:medium), :class => "lank"%>
                    <% end %>
                  </a>
                
                

                  <div id="nene-<%= nene.id %>" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">

                  <div class="large-12 columns">
                    <h2 id="modalTitle"><%= nene.name %></h2>
                  </div>
                    

                    <br>
                    <div class="medium-4 columns">
                    <br>
                    <% if nene.image.url %>
                      <%= image_tag nene.image.url, :width => '250px', :style => "float:left"  %>
                      
                    <% end %>
                    </div>
                    
                    <div class="medium-4 columns">
                    <% if nene.desc %>
                      <h4 class="subheader">Detalles</h4>
                     <%= nene.desc %>
                    <% end %>
                    
                    </div>
                    <div class="medium-4 columns">
                    <h4 class="subheader">Idiomas</h4>
                   <% nene.languages.each do |x| %>
                          <%= x.name %><br>
                          <% end %>
                    
                    <h4 class="subheader">Ciudad </h4>
                      <% nene.citys.each do |y| %>
                       <%= y.name %><br>
                      <% end %>  
                    <h4 class="subheader">Contacto</h4>
                    <% nene.contacts.each do |f| %>
                        <%= f.phone%> <br>
                      <% end %> 
                    </div>
                <a class="close-reveal-modal" aria-label="Close">&#215;</a>
              </div>
          </div>
          <% end %>
      </div>

  </div>
</div>
<a href="#" id="scroll" title="Scroll to Top" style="display: none;">Top<span></span></a>
</div>
<script>
$(document).ready(function(){ 
  $(window).scroll(function(){ 
    if ($(this).scrollTop() > 100) { 
      $('#scroll').fadeIn(); 
    } else { 
      $('#scroll').fadeOut(); 
    } 
  }); 
  $('#scroll').click(function(){ 
    $("html, body").animate({ scrollTop: 0 }, 600); 
    return false; 
  }); 
});
</script>


</body>
